<%= render :partial => "layouts/cms_header" %>
<div class="content">
<h1>Listing tenants</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Content title</th>
    <th>Content</th>
    <th>Subcontent title</th>
    <th>Subcontent</th>
    <!--<th>Description</th>-->
    <th>Sector</th>
    <th>Active</th>
    <th>Featured</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tenants.each do |tenant| %>
  <tr>
    <td><%= tenant.name %></td>
    <td><%= tenant.content_title %></td>
    <td><%= truncate(strip_tags(tenant.content), :length => 100).html_safe unless tenant.content.blank? %></td>
    <td><%= tenant.subcontent_title %></td>
    <td><%= truncate(strip_tags(tenant.subcontent), :length => 100).html_safe unless tenant.subcontent.blank? %></td>
    <!--<td><%= truncate(strip_tags(tenant.description), :length => 100).html_safe unless tenant.description.blank? %></td>-->
    <td><%= tenant.sector %></td>
    <td><%= tenant.active %></td>
    <td><%= tenant.featured %></td>
    <td><%= link_to 'Show', tenant %></td>
    <td><%= link_to 'Edit', edit_tenant_path(tenant) %></td>
    <td><%= link_to 'Destroy', tenant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '<i class="icon-pencil"></i> New Tenant'.html_safe, new_tenant_path, :class => "btn btn-mini" %>
</div>