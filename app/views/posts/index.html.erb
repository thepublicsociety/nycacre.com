<%= render :partial => "layouts/cms_header" %>
<div class="content">
<h1>Listing posts</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Author</th>
    <th>Category</th>
    <th>Tags</th>
    <th>Related tenants</th>
    <th>Sector</th>
    <th>Published</th>
    <th>Featured</th>
    <th>Archived</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= truncate(strip_tags(post.content), :length => 100).html_safe unless post.content.blank? %></td>
    <td><%= post.author %></td>
    <td><%= post.category %></td>
    <td><%= post.tag %></td>
    <td><%= post.tenant %></td>
    <td><%= post.sector %></td>
    <td><%= post.publish %></td>
    <td><%= post.featured %></td>
    <td><%= post.archive %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '<i class="icon-pencil"></i> New Post'.html_safe, new_post_path, :class => "btn btn-mini" %>
</div>