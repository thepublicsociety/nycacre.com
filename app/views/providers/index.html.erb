<%= render :partial => "layouts/cms_header" %>
<div class="content">
<h1>Listing providers</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Specialty</th>
    <th>Description</th>
    <th>Content</th>
    <th>Category</th>
    <th>Related tenants</th>
    <th>Sector</th>
    <th>Tags</th>
    <th>Published</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @providers.each do |provider| %>
  <tr>
    <td><%= provider.name %></td>
    <td><%= provider.author %></td>
    <td><%= provider.specialty %></td>
    <td><%= provider.description.blank? ? "" : truncate(strip_tags(provider.description), :length => 100).html_safe %></td>
    <td><%= provider.content.blank? ? "" : truncate(strip_tags(provider.content), :length => 100).html_safe %></td>
    <td><%= provider.category %></td>
    <td><%= provider.tenant %></td>
    <td><%= provider.sector %></td>
    <td><%= provider.tag %></td>
    <td><%= provider.publish %></td>
    <td><%= link_to 'Show', provider %></td>
    <td><%= link_to 'Edit', edit_provider_path(provider) %></td>
    <td><%= link_to 'Destroy', provider, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '<i class="icon-pencil"></i> New provider'.html_safe, new_provider_path, :class => "btn btn-mini" %>
</div>