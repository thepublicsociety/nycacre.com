<%= render :partial => "layouts/cms_header" %>
<div class="content">
<h1>Listing acre sections</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Content</th>
    <th>Featured</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @acres.each do |a| %>
  <tr>
    <td><%= a.title %></td>
    <td><%= a.subtitle %></td>
    <td><%= truncate(strip_tags(a.content), :length => 100).html_safe unless a.content.blank? %></td>
    <td><%= a.featured %></td>
    <td><%= link_to 'Show', a %></td>
    <td><%= link_to 'Edit', edit_acre_path(a) %></td>
    <td><%= link_to 'Destroy', a, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '<i class="icon-pencil"></i> New Section'.html_safe, new_acre_path, :class => "btn btn-mini" %>
</div>