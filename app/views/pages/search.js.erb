<% if @search_results.empty? %>
  $(".news_display").html("<div class=\"news_list\"><div class=\"panel\"><ul class=\"unstyled\"><li><div class=\"news_headline\"><h3>No Results Found</h3></div><div class=\"news_subheading\"></div></li></ul></div></div>");
<% else %>
  $(".news_display").html("<div class=\"news_list\"><div class=\"panel\"><ul class=\"unstyled\"><%= escape_javascript(render :partial => "layouts/search_results", :collection => @search_results, :as => :r) %></ul></div></div>");
<% end %>