<%= simple_form_for(@tool) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :website %>
    <%= f.input :specialty %>
    <%= f.input :description %>
    <%= f.input :category %>
    <%= f.input :tag %>
    <%= f.input :publish %> 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
