<%= render :partial => "layouts/cms_header" %>
<div class="content">
<h1>Listing tools</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Specialty</th>
    <th>Description</th>
    <th>Category</th>
    <th>Tag</th>
    <th>Publish</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tools.each do |tool| %>
  <tr>
    <td><%= tool.name %></td>
    <td><%= tool.website %></td>
    <td><%= tool.specialty %></td>
    <td><%= tool.description %></td>
    <td><%= tool.category %></td>
    <td><%= tool.tag %></td>
    <td><%= tool.publish %></td>
    <td><%= link_to 'Show', tool %></td>
    <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
    <td><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '<i class="icon-pencil"></i> New tool'.html_safe, new_tool_path, :class => "btn btn-mini" %>
</div>