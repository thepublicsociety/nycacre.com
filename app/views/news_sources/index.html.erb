<%= render :partial => "layouts/cms_header" %>
<div class="content">
<h1>Listing news sources</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Feed URL</th>
    <th></th>
    <th></th>
  </tr>

<% @news_sources.each do |n| %>
  <tr>
    <td><%= n.name %></td>
    <td><%= n.website %></td>
    <td><%= n.feed_url %></td>
    <td><%= link_to 'Edit', edit_news_source_path(n) %></td>
    <td><%= link_to 'Destroy', n, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '<i class="icon-pencil"></i> New news source'.html_safe, new_news_source_path, :class => "btn btn-mini" %>
</div>