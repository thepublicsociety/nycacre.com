<%= render :partial => "layouts/cms_header" %>
<div class="content">
<h1>Listing articles</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Author</th>
    <th>Category</th>
    <th>Tags</th>
    <th>Related tenants</th>
    <th>Published</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.content.blank? ? "" : truncate(strip_tags(article.content), :length => 100).html_safe %></td>
    <td><%= article.author %></td>
    <td><%= article.category %></td>
    <td><%= article.tag %></td>
    <td><%= article.tenant %></td>
    <td><%= article.publish %></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '<i class="icon-pencil"></i> New Article'.html_safe, new_article_path, :class => "btn btn-mini" %>
</div>