<%= render :partial => "layouts/cms_header" %>
<div class="content">
<h1>Listing about sections</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Content</th>
    <th>Featured</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @abouts.each do |about| %>
  <tr>
    <td><%= about.title %></td>
    <td><%= about.subtitle %></td>
    <td><%= truncate(strip_tags(about.content), :length => 100).html_safe unless about.content.blank? %></td>
    <td><%= about.featured %></td>
    <td><%= link_to 'Show', about %></td>
    <td><%= link_to 'Edit', edit_about_path(about) %></td>
    <td><%= link_to 'Destroy', about, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '<i class="icon-pencil"></i> New Post'.html_safe, new_about_path, :class => "btn btn-mini" %>
</div>