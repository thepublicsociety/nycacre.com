<%= render :partial => "layouts/cms_header" %>
<div class="content">
<h1>Listing graduates</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Content title</th>
    <th>Content</th>
    <th>Subcontent title</th>
    <th>Subcontent</th>
    <th>Description</th>
    <th>Sector</th>
    <th>Publish</th>
    <th>Featured</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @graduates.each do |g| %>
  <tr>
    <td><%= g.name %></td>
    <td><%= g.content_title %></td>
    <td><%= truncate(strip_tags(g.content), :length => 100).html_safe unless g.content.blank? %></td>
    <td><%= g.subcontent_title %></td>
    <td><%= truncate(strip_tags(g.subcontent), :length => 100).html_safe unless g.subcontent.blank? %></td>
    <td><%= truncate(strip_tags(g.description), :length => 100).html_safe unless g.description.blank? %></td>
    <td><%= g.sector %></td>
    <td><%= g.publish %></td>
    <td><%= g.featured %></td>
    <td><%= link_to 'Show', g %></td>
    <td><%= link_to 'Edit', edit_graduate_path(g) %></td>
    <td><%= link_to 'Destroy', g, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '<i class="icon-pencil"></i> New Graduate'.html_safe, new_graduate_path, :class => "btn btn-mini" %>
</div>